<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Latar belakang (solid color) -->
    <solid android:color="@android:color/white" />

    <!-- Border (stroke) -->
    <stroke
        android:width="1dp"
         />

    <!-- Sudut melengkung (rounded corners) -->
    <corners android:radius="8dp" />

    <!-- Padding internal (opsional, untuk jarak isi dengan border) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>