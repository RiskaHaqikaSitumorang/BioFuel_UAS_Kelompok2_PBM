<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:background="#FFF8E7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->

            <!-- Card with Kota & Poin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/top_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_placeholder" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Razwa Hafsa"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@drawable/card_gradient"
                    android:padding="16dp">

                    <!-- Kota -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="44dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_star" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kota"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lihat Peringkat"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#80FFFFFF" />

                    <!-- Poin -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="44dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_coin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16500"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tukar Poin"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pengaturan Aplikasi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaturan Aplikasi"
                android:textColor="#7E7C83"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaturan Keamanan"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="4dp"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaturan Profil"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:drawableEnd="@drawable/ic_dropdown"
                android:paddingBottom="4dp" />

            <!-- Informasi Umum -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi Umum"
                android:textColor="#7E7C83"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="30dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Kami"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingTop="12dp"
                android:drawableEnd="@drawable/ic_dropdown"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Syarat &amp; Ketentuan"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:drawableEnd="@drawable/ic_dropdown"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kebijakan Privasi"
                android:textStyle="bold"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:drawableEnd="@drawable/ic_dropdown"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <!-- Versi dan Tombol Keluar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="Versi Aplikasi 1.0.0"
                android:textColor="#999"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Keluar"
                android:textColor="#A46400"
                android:backgroundTint="@color/sekunder"
                android:background="@drawable/button_outline"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Spacer untuk Bottom Navigation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navbar"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="40dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="1"
            android:layout_marginBottom="6dp"
            android:src="@drawable/circle"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:scaleType="centerInside" />
    </LinearLayout>
</RelativeLayout>