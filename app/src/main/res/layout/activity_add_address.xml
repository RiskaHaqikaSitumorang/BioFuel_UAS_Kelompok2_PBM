<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AddAddressActivity">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_top_login2"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tambah Alamat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </RelativeLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Pemilik"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Nama -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_nama"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="Nama lengkap"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName" />

            <!-- No. Handphone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Handphone"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="08XX XXXX XXXX"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="phone" />

            <!-- Label Alamat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Label Alamat"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_label"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="Contoh: Rumah"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Provinsi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provinsi"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_provinsi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="Masukkan Provinsi"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="text" />

            <!-- Kota/Kabupaten -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota / Kabupaten"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_kota"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="Masukkan Kota/Kabupaten"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="text" />

            <!-- Kecamatan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kecamatan"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_kecamatan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="Masukkan Kecamatan"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="text" />

            <!-- Kode Pos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Pos"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_kode_pos"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:hint="Contoh: 23911"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:inputType="number"
                android:maxLength="5" />

            <!-- Detail Lain -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Lain"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_detail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:hint="Contoh: Perka Jalan Nomor Rumah"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="3" />

            <!-- Atur Berdasarkan Pinpoint -->
            <LinearLayout
                android:id="@+id/ll_pinpoint"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Location"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atur Berdasarkan Pinpoint"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Arrow Right" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>